<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Live Streaming Manager' %></title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">

    <%- typeof extraStyles !== 'undefined' ? extraStyles : '' %>
</head>
<body>
    <header class="header">
        <!-- System Stats -->
        <div class="system-stats">
            <div class="stat-item">
                <i class="fas fa-microchip"></i>
                <span class="stat-label">CPU:</span>
                <span class="stat-value" id="cpu-usage">0%</span>
            </div>
            <div class="stat-item">
                <i class="fas fa-memory"></i>
                <span class="stat-label">Memory:</span>
                <span class="stat-value" id="memory-usage">0%</span>
            </div>
            <div class="stat-item">
                <i class="fas fa-hdd"></i>
                <span class="stat-label">Disk:</span>
                <span class="stat-value" id="disk-usage">0%</span>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="nav">
            <a href="/" class="nav-link <%= typeof path !== 'undefined' && path === '/' ? 'active' : '' %>">
                <i class="fas fa-home"></i> Home
            </a>
            <a href="/stream" class="nav-link <%= typeof path !== 'undefined' && path === '/stream' ? 'active' : '' %>">
                <i class="fas fa-video"></i> Live Streaming
            </a>
            <a href="/download" class="nav-link <%= typeof path !== 'undefined' && path === '/download' ? 'active' : '' %>">
                <i class="fas fa-download"></i> Download Video
            </a>
        </nav>
    </header>

    <main class="container">
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= success %>
            </div>
        <% } %>

        <%- body %>
    </main>

    <!-- Custom JavaScript -->
    <script src="/js/client.js"></script>
    <%- typeof extraScripts !== 'undefined' ? extraScripts : '' %>
</body>
</html>